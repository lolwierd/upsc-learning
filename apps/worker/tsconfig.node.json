{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "resolveJsonModule": true,
        "lib": [
            "ES2022"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
