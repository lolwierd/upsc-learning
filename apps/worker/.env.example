# ====================================
# UPSC MCQ API - Environment Variables
# ====================================
# Copy this file to .env and fill in your values

# ====================================
# Google Cloud Configuration (REQUIRED)
# ====================================

# Google Cloud Service Account JSON (REQUIRED)
# Paste the entire JSON content as a single line
GCP_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# Vertex AI Location (use "global" for Gemini 3 models)
GOOGLE_VERTEX_LOCATION=global

# ====================================
# Model Configuration
# ====================================

# Model for quiz generation
GENERATION_MODEL=gemini-3-pro-preview

# Model for fact-checking
FACT_CHECK_MODEL=gemini-3-flash-preview

# Enable fact-checking (1 = enabled, 0 = disabled)
ENABLE_FACT_CHECK=1

# Enable web grounding for current affairs (1 = enabled, 0 = disabled)
ENABLE_WEB_GROUNDING=0

# ====================================
# Server Configuration
# ====================================

# Environment (development | production)
ENVIRONMENT=production

# Server port
PORT=3001

# Database path (SQLite)
DATABASE_PATH=/app/data/upsc-mcq.db

# CORS origins (comma-separated)
CORS_ORIGIN=https://upsc.lolwierd.com,http://localhost:3000

# ====================================
# Cloudflare Tunnel
# ====================================

# Get this from Cloudflare Zero Trust dashboard:
# 1. Go to Zero Trust > Access > Tunnels
# 2. Create a tunnel named "upsc-api"
# 3. Copy the tunnel token
CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here

# ====================================
# Debug
# ====================================

# Enable LLM debug logging (1 = enabled, 0 = disabled)
LLM_DEBUG=0

# Local LLM dump URL (development only)
# LOCAL_LLM_DUMP_URL=http://127.0.0.1:8790/dump
